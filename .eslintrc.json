{
  "env": {
    "amd": true,
    "browser": true,
    "commonjs":true,
    "jest": true,
    "es2019": true
  },
  "globals": {
    "log":false,
    "util":false
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "parserOptions": {
    "requireConfigFile": false
  },
  "rules": {
    "quotes": [
      2,
      "single"
    ],
    "no-var": "off",
    "max-len": [2, {
      "code": 140,
      "tabWidth": 2,
      "ignoreUrls": true,
      "ignorePattern": "^import\\s.+from\\s.+;"
    }],
    "comma-dangle": ["error", {
      "arrays": "only-multiline",
      "objects": "only-multiline",
      "functions": "never"
    }],
    "eqeqeq": ["warn", "smart"]
  },
  "overrides": [
    {
      "files": ["__tests__/**/*.js"],
      "parserOptions": {
        "sourceType": "module"
      },
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style"
      ]
    }
  ]
}
